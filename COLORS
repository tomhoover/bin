# Usage example:
#   # shellcheck source=/dev/null
#   source ~/bin/COLORS
#   echo "${RED}ABORTED!${RESET} ${REPOSITORY} does not exist!"

# Only use colors in interactive shells, not from crontab
if [ -t 1 ]; then
    RED=$(tput setaf 1)
    GREEN=$(tput setaf 2)
    YELLOW=$(tput setaf 3)
    BLUE=$(tput setaf 4)
    MAGENTA=$(tput setaf 5)
    CYAN=$(tput setaf 6)
    RESET=$(tput sgr0)
else
    RED=
    GREEN=
    YELLOW=
    BLUE=
    MAGENTA=
    CYAN=
    RESET=
fi
